<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_transparent_background_pressed" />
            <corners android:radius="@dimen/button_corner_radius" />
            <stroke android:width="@dimen/button_border_width" android:color="@color/button_transparent_border_pressed" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_transparent_background_disabled" />
            <corners android:radius="@dimen/button_corner_radius" />
            <stroke android:width="@dimen/button_border_width" android:color="@color/button_transparent_border_disabled" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_transparent_background" />
            <corners android:radius="@dimen/button_corner_radius" />
            <stroke android:width="@dimen/button_border_width" android:color="@color/button_transparent_border" />
        </shape>
    </item>
</selector>