<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>



    <!-- Images -->
    <style name="Image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Image.Center">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Background Images -->
    <style name="BackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:alpha">0.9</item>
    </style>

    <!-- Headers -->
    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="Header.Login">
        <item name="android:layout_height">@dimen/activity_login_header_layout_height</item>
    </style>

    <style name="Header.Register">
        <item name="android:layout_height">@dimen/activity_register_header_layout_height</item>
    </style>

    <!-- Button styles -->
    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
    </style>

    <style name="Button.Transparent">
        <item name="android:background">@drawable/button_transparent</item>
        <item name="android:textColor">@drawable/button_transparent_text</item>
        <item name="android:textSize">@dimen/button_text_size_default</item>
    </style>

    <style name="Button.PinCode">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:height">60dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:textSize">35sp</item>
    </style>

    <!-- Inputs -->
    <style name="Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/input_layout_height</item>
        <item name="android:paddingLeft">@dimen/input_padding_left</item>
        <item name="android:textColor">@color/input_text</item>
        <item name="android:textColorHint">@color/input_text_hint</item>
    </style>

    <!-- Texts -->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>
    <style name="Text.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="Text.Small.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>
    <style name="Text.Small.Light.Clickable">
        <item name="android:textColor">@drawable/text_light_clickable</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="Text.Large.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Text.XLarge">
        <item name="android:textSize">@dimen/text_size_xxLarge</item>
    </style>
    <style name="Text.XLarge.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/white</item>
    </style>

</resources>
