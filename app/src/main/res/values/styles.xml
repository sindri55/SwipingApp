    <!-- Layouts -->
    <style name="Layout"/>

    <style name="Layout.Background">
        <item name="android:background">@color/background_default</item>
    </style>

    <style name="Layout.Padding">
        <item name="android:padding">@dimen/layout_padding_default</item>
    </style>
    <style name="Layout.Padding.Large">
        <item name="android:padding">@dimen/layout_padding_large</item>
    </style>

    <style name="Layout.Transparent">
        <item name="android:background">@drawable/button_transparent</item>
        <item name="android:textColor">@drawable/button_transparent_text</item>
        <item name="android:layout_marginTop">@dimen/button_transparent_margin_top10</item>
    </style>

    <!-- Background Images -->
    <style name="BackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:alpha">0.9</item>
    </style>

    <!-- Headers -->
    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="Header.Login">
        <item name="android:layout_height">@dimen/layout_header_login_layout_height</item>
    </style>
    <style name="Header.Register">
        <item name="android:layout_height">@dimen/layout_header_register_layout_height</item>
    </style>
    <style name="Header.Profile">
        <item name="android:layout_height">@dimen/layout_header_profile_layout_height</item>
    </style>

    <!-- Button styles -->
    <style name="Button">
        <item name="android:background">@drawable/button_default</item>
        <item name="android:textColor">@color/button_default_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size_default</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
    </style>
    <style name="Button.Success">
        <item name="android:background">@drawable/button_success</item>
        <item name="android:textColor">@color/button_success_text</item>
    </style>

    <style name="Button.Transparent">
        <item name="android:background">@drawable/button_transparent</item>
        <item name="android:textColor">@drawable/button_transparent_text</item>
        <item name="android:layout_marginTop">@dimen/button_transparent_margin_top25</item>
    </style>

    <style name="Button.AmountSpinner">
        <item name="android:layout_width">@dimen/button_amount_spinner_layout_width</item>
        <item name="android:layout_height">@dimen/button_amount_spinner_layout_height</item>
        <item name="android:background">@drawable/button_amount_spinner</item>
        <item name="android:textColor">@color/button_amount_spinner_text</item>
        <item name="android:layout_marginTop">@dimen/button_amount_spinner_margin_top</item>
    </style>
    <style name="Button.AmountSpinner.Decrement">
        <item name="android:textSize">@dimen/button_amount_spinner_decrement_text_size</item>
    </style>
    <style name="Button.AmountSpinner.Increment">
        <item name="android:textSize">@dimen/button_amount_spinner_increment_text_size</item>
    </style>

    <style name="Button.PinCode">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:height">60dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:textSize">35sp</item>
    </style>

    <!-- Inputs -->
    <style name="Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/input_layout_height</item>
        <item name="android:paddingLeft">@dimen/input_padding_left</item>
        <item name="android:textColor">@color/input_text</item>
        <item name="android:textColorHint">@color/input_text_hint</item>
    </style>
    <style name="Input.Transparent">
        <item name="android:textColor">@color/input_transparent_text</item>
        <item name="android:textColorHint">@color/input_transparent_text_hint</item>
    </style>

    <!-- Input Box -->
    <style name="InputBox">
        <item name="android:layout_height">@dimen/input_box_layout_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/input_box_text_size</item>
        <item name="android:layout_marginTop">@dimen/input_box_margin_top</item>
    </style>
    <style name="InputBox.Label">
        <item name="android:background">@drawable/input_box_label</item>
        <item name="android:textColor">@color/input_box_label_text</item>
        <item name="android:paddingLeft">@dimen/input_box_label_padding_left</item>
        <item name="android:paddingRight">@dimen/input_box_label_padding_right</item>
    </style>
    <style name="InputBox.Value">
        <item name="android:background">@drawable/input_box_value</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/input_box_value_text</item>
        <item name="android:textColorHint">@color/input_box_value_text_hint</item>
        <item name="android:paddingRight">@dimen/input_box_value_padding_right</item>
        <item name="android:paddingLeft">@dimen/input_box_value_padding_left</item>
    </style>
    <style name="InputBox.Spinner">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/input_box_value_text</item>
        <item name="android:paddingRight">@dimen/input_box_value_padding_right</item>
        <item name="android:paddingLeft">@dimen/input_box_value_padding_left</item>
    </style>

    <!-- Form group -->
    <style name="FormGroup">
        <item name="android:layout_marginTop">@dimen/form_group_margin_top</item>
    </style>

    <!-- Form control -->
    <style name="FormControl">
    </style>
    <style name="FormControl.Label">
        <item name="android:textSize">@dimen/form_control_label_text_size</item>
        <item name="android:textColor">@color/form_control_label_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">@dimen/form_control_label_padding_bottom</item>
    </style>
    <style name="FormControl.Value">
        <item name="android:background">@drawable/form_control_value</item>
        <item name="android:textSize">@dimen/form_control_value_text_size</item>
        <item name="android:textColor">@color/form_control_value_text</item>
        <item name="android:textColorHint">@color/form_control_value_hint</item>
        <item name="android:padding">@dimen/form_control_value_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    <style name="FormControl.DropdownItem">
        <item name="android:textColor">@color/form_control_value_text</item>
        <item name="android:textSize">@dimen/form_control_value_text_size</item>
        <item name="android:padding">@dimen/form_control_value_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Texts -->
    <style name="Text">
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>
    <style name="Text.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="Text.Small.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>
    <style name="Text.Small.Light.Clickable">
        <item name="android:textColor">@drawable/text_light_clickable</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="Text.Large.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Text.XLarge">
        <item name="android:textSize">@dimen/text_size_xxLarge</item>
    </style>
    <style name="Text.XLarge.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Text.StepIndicator">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/text_step_indicator_padding</item>
        <item name="android:background">@drawable/text_step_indicator</item>
        <item name="android:textColor">@color/text_step_indicator_text</item>
    </style>
    <style name="Text.StepIndicator.Active">
        <item name="android:background">@color/text_step_indicator_background_active</item>
        <item name="android:textColor">@color/text_step_indicator_text_active</item>
    </style>
</resources>
