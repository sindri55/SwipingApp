<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>

    <dimen name="activity_login_horizontal_margin">30dp</dimen>
    <dimen name="activity_login_vertical_margin">30dp</dimen>
    <dimen name="activity_login_header_layout_height">150dp</dimen>

    <dimen name="activity_register_horizontal_margin">@dimen/activity_login_horizontal_margin
    </dimen>
    <dimen name="activity_register_vertical_margin">@dimen/activity_login_vertical_margin</dimen>
    <dimen name="activity_register_header_layout_height">
        @dimen/activity_login_header_layout_height
    </dimen>

    <!-- Texts -->
    <dimen name="text_size_small">15sp</dimen>
    <dimen name="text_size_default">20sp</dimen>
    <dimen name="text_size_large">25sp</dimen>
    <dimen name="text_size_xLarge">30sp</dimen>
    <dimen name="text_size_xxLarge">35sp</dimen>

    <!-- Buttons -->
    <dimen name="button_text_size_default">@dimen/text_size_default</dimen>
    <dimen name="button_text_size_large">@dimen/text_size_large</dimen>
    <dimen name="button_text_size_xLarge">@dimen/text_size_xLarge</dimen>

    <dimen name="button_margin_top">25dp</dimen>
    <dimen name="button_corner_radius">2dp</dimen>
    <dimen name="button_border_width">2dp</dimen>

    <!-- Inputs -->
    <dimen name="input_layout_height">50dp</dimen>
    <dimen name="input_padding_left">10dp</dimen>
</resources>
