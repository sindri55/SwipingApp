<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background_login">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_height="100dp">
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="@color/gray"
            android:alpha="0.70"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:weightSum="3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/one"
                style="@style/Button.PinCode"
                android:text="1"/>

            <TextView android:id="@+id/four"
                style="@style/Button.PinCode"
                android:text="4"/>

            <TextView android:id="@+id/seven"
                style="@style/Button.PinCode"
                android:text="7"/>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/two"
                style="@style/Button.PinCode"
                android:text="2"/>

            <TextView android:id="@+id/five"
                style="@style/Button.PinCode"
                android:text="5"/>

            <TextView android:id="@+id/eight"
                style="@style/Button.PinCode"
                android:text="8"/>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/three"
                style="@style/Button.PinCode"
                android:text="3"/>

            <TextView android:id="@+id/six"
                style="@style/Button.PinCode"
                android:text="6"/>

            <TextView android:id="@+id/nine"
                style="@style/Button.PinCode"
                android:text="9"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/zero"
            style="@style/Button.PinCode"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:text="0"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button style="@style/Button.Transparent"
            android:layout_gravity="bottom"
            android:id="@+id/btn_login"
            android:text="Login"/>

    </LinearLayout>




</LinearLayout>
