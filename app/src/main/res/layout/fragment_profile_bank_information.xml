<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout.Background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout style="@style/Layout.Padding"
        android:id="@+id/payment_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout style="@style/FormGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView style="@style/FormControl.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CCN"/>

            <TextView style="@style/FormControl.Value"
                android:id="@+id/profile_ccn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout style="@style/FormGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView style="@style/FormControl.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bank name"/>

            <EditText style="@style/FormControl.Value"
                android:id="@+id/bank_information_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout style="@style/FormGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView style="@style/FormControl.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iban"/>

            <EditText style="@style/FormControl.Value"
                android:id="@+id/bank_information_iban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout style="@style/FormGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView style="@style/FormControl.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Swift (BIC)"/>

            <EditText style="@style/FormControl.Value"
                android:id="@+id/bank_information_swift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button style="@style/Button.Change"
                android:id="@+id/profile_btn_change"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change"/>
            <Button style="@style/Button.Success"
                android:id="@+id/profile_btn_save"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Okey"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>